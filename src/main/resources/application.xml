<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <bean id="companyRepository" class="com.spring.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg type="com.spring.database.pool.ConnectionPool" ref="pool1"/>
    </bean>

    <bean id="pool1" name="p1,p2,p3" class="com.spring.database.pool.ConnectionPool" >
        <constructor-arg name="username" type="java.lang.String" ref="driver"/>
        <constructor-arg index="2" type="java.util.List">
            <list>
                <value>value1</value>
                <value>value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg name="poolSize" type="java.lang.Integer" value="10"/>
        <constructor-arg index="3" type="java.util.Map">
            <null/>
        </constructor-arg>
        <property name="properties" >
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value=""/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </property>
    </bean>

</beans>